{
    "name": "verdincms/core",
    "description": "Content Management System",
    "license": "MIT",
    "authors": [
        {
            "name": "Tom Papatolis",
            "email": "tom@tpapatolis.com",
            "homepage": "https://tpapatolis.com"
        }
    ],
    "type": "project",
    "homepage": "https://github.com/tomgineer",
    "support": {
        "source": "https://github.com/tomgineer/verdincms"
    },
    "require": {
        "php": "~8.2.0",
        "codeigniter4/framework": "4.6.1"
    },
    "require-dev": {
        "fakerphp/faker": "^1.9"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Config\\": "app/Config/"
        },
        "exclude-from-classmap": [
            "**/Database/Migrations/**"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    }
}
